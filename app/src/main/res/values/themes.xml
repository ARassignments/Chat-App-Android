<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ChatApp" parent="Base.Theme.ChatApp" />
    <style name="Heading1">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Heading2">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SubHeading1">
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SubHeading2">
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BodyText1">
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BodyText2">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MetaData1">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MetaData2">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MetaData3">
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Btn">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:textColor">@color/myThemeTextOffWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">18dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>