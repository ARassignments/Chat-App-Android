<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Screens.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/welcome_img"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect easily with your family and friends over countries"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/myThemeTextActive"
            style="@style/Heading2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/myThemeTextActive"
        android:text="Terms &amp; Privacy Policy"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        style="@style/BodyText1"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:text="Start Messaging"
        style="@style/Btn"/>

</LinearLayout>